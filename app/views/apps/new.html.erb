<div class="container">
<h1 class="title-all">New Application</h1>
  <div class="col-md-6">
    <%= form_for @app do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter Application name" %>
      </div>
      <div class="form-group">
        <%= f.label :URL %>
        <%= f.text_area :URL, rows: 3, class: 'form-control', placeholder: "Enter App URL" %>
      </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
